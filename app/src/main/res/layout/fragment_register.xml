<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registracija"
                android:textSize="16pt"
                android:textAlignment="center"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/firstnameRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ime"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/lastnameRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prezime"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/usernameRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="KorisniÄko ime"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/passwordRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lozinka"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/repeatPasswordRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ponovljena lozinka"
                android:inputType="textPassword"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/emailRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/addressRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresa"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/townRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Grad"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/dateBirthRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresa"
                android:inputType="date"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/contactRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kontakt"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registriraj se"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/buttonBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Povratak na prijavu"
                android:layout_margin="5dp"
                android:onClick="ShowLogin"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>