<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/usernameLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="KorisniÄko ime"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/passwodLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lozinka"
            android:inputType="textPassword"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/forgotPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zaboravljenaLozinka"
            android:textAlignment="center"
            android:onClick="ShowRecoveryPassword"
            android:textColor="@color/ZabrovaljenaLozinka"/>
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prijava"
            android:layout_margin="5dp"
            android:onClick="Login"/>
        <Button
            android:id="@+id/buttonLoginRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registracija"
            android:layout_margin="5dp"
            android:onClick="ShowRegister"/>
    </LinearLayout>

</FrameLayout>